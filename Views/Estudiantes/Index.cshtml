@model IEnumerable<ProyectoDispositivosPrestamo.Models.Estudiante>
@{
    ViewData["Title"] = "CRUD Estudiantes";
}
<h1>Estudiantes</h1>
<a asp-action="Create">Agregar Estudiante</a>
<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>MatrÃ­cula</th>
            <th>Carrera</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var estudiante in Model)
    {
        <tr>
